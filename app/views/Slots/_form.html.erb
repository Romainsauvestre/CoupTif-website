<%= form_for [@hairdresser, @calendar, @slot], :html => { :class => "form-horizontal calendar" } do |f| %>

    <% if @slot.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@slot.errors.count, "error") %> prohibited this calendar from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @slot.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :start_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.time_field :start_time, :class => 'form-control' %>
    </div>
    <%= error_span(@slot[:start_time]) %>
  </div>
  <div class="control-group">
    <%= f.label :end_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.time_field :end_time, :class => 'form-control' %>
    </div>
    <%= error_span(@slot[:end_time]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            hairdresser_calendar_slots_path, :class => 'btn btn-default' %>

<% end %>
