<%- model_class = Hairdresser -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @hairdresser.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @hairdresser.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @hairdresser.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:photo) %>:</strong></dt>
  <dd><img src= "<%= @hairdresser.photo %>" style = "width: 50%; height: 50%"></dd>
  <dt><strong>Services</strong></dt>
  <dd><%= link_to 'Services', hairdresser_services_path(@hairdresser),
                  :class => 'btn btn-default' %> </dd>
  <dt><strong>Calendars</strong></dt>
  <dd><%= link_to 'Calendars', hairdresser_calendars_path(@hairdresser),
                  :class => 'btn btn-default' %> </dd>
  <dt><strong>Bookings</strong></dt>
  <dd><%= link_to 'Bookings', hairdresser_bookings_path(@hairdresser),
                  :class => 'btn btn-default' %> </dd>
</dl>


<%= link_to t('.back', :default => t("helpers.links.back")),
              hairdressers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_hairdresser_path(@hairdresser), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              hairdresser_path(@hairdresser),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>


