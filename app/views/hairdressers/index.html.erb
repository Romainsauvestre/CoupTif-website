<p id="notice"><%= notice %></p>

<h1>Listing Hairdressers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Description</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hairdressers.each do |hairdresser| %>
      <tr>
        <td><%= hairdresser.first_name %></td>
        <td><%= hairdresser.last_name %></td>
        <td><%= hairdresser.description %></td>
        <td><%= hairdresser.photo %></td>
        <td><%= link_to 'Show', hairdresser %></td>
        <td><%= link_to 'Edit', edit_hairdresser_path(hairdresser) %></td>
        <td><%= link_to 'Destroy', hairdresser, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

